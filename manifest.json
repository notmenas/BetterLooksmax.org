{
    "manifest_version": 3,
    "name": "BetterLooksmax.org 1.0 - Open-source Extension for Looksmax.org",
    "version": "1.0.0",
    "description": "A comprehensive toolkit for Looksmax.org , filters, timers, and more quality-of-life improvements.",
    
    "permissions": [
        "activeTab",
        "storage"
    ],
    
    "host_permissions": [
        "https://looksmax.org/*",
        "https://forum.looksmaxxing.com/*",
        "https://lookism.cc/*"
    ],
    
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "BetterLooksmax.org Tools"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self'; font-src 'self' data:; img-src 'self' data: https://looksmax.org https://forum.looksmaxxing.com https://lookism.cc; connect-src 'self' https://looksmax.org https://forum.looksmaxxing.com https://lookism.cc"
    },
    
    "content_scripts": [
        {
            "matches": [
                "https://looksmax.org/*",
                "https://forum.looksmaxxing.com/*",
                "https://lookism.cc/*"
            ],
            "js": [
                "message-constants.js",
                "custom-upload.js",
                "browser-api.js",
                "libs/purify.min.js",
                "sanitizer.js",
                "storage-validator.js",
                "security-utils.js",
                "performance-utils.js",
                "button-styles.js",
                "privacy-buttons-simple.js",
                "content.js", 
                "greyfilter.js", 
                "nsfwfilter.js", 
                "publicmode.js", 
                "quickreply.js",  
                "opfilter.js", 
                "text-presets.js", 
                "timer.js"
            ],
            "run_at": "document_start"
        }
    ]
}